{% extends 'base.html.twig' %}

{% block body %}
  <main class="main-content position-relative border-radius-lg">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl">
      <div class="container-fluid py-1 px-3">
        <h6 class="font-weight-bolder mb-0">Signalements Environnementaux ⚠️</h6>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <button class="btn-eco btn-sm">
              <i class="fa-solid fa-plus me-2"></i>Nouveau signalement
            </button>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid py-4">
      <!-- Stats -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="stat-card">
            <i class="fa-solid fa-flag eco-icon"></i>
            <h5 class="mt-2 fw-bold">3</h5>
            <p class="text-muted small mb-0">Mes signalements</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <i class="fa-solid fa-check-circle eco-icon"></i>
            <h5 class="mt-2 fw-bold">2</h5>
            <p class="text-muted small mb-0">Résolus</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <i class="fa-solid fa-clock eco-icon"></i>
            <h5 class="mt-2 fw-bold">1</h5>
            <p class="text-muted small mb-0">En attente</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <i class="fa-solid fa-users eco-icon"></i>
            <h5 class="mt-2 fw-bold">127</h5>
            <p class="text-muted small mb-0">Total communauté</p>
          </div>
        </div>
      </div>

      <!-- Reports List -->
      <div class="row">
        <!-- Report Card 1 -->
        <div class="col-md-6 mb-4">
          <div class="card welcome-card">
            <div class="card-body">
              <div class="d-flex justify-content-between mb-3">
                <span class="badge bg-warning">En cours</span>
                <small class="text-muted">Il y a 2 jours</small>
              </div>
              <h5 class="fw-bold">Décharge sauvage détectée</h5>
              <p class="text-muted small mb-2">
                <i class="fa-solid fa-map-marker-alt me-1"></i>Route de Bizerte, km 15
              </p>
              <p class="mb-3">Accumulation importante de déchets plastiques et électroniques abandonnés sur le bord de route.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <span class="badge bg-danger me-1">Urgent</span>
                  <span class="badge bg-secondary">Déchets</span>
                </div>
                <button class="btn btn-outline-success btn-sm">
                  <i class="fa-solid fa-eye me-1"></i>Détails
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Report Card 2 -->
        <div class="col-md-6 mb-4">
          <div class="card welcome-card">
            <div class="card-body">
              <div class="d-flex justify-content-between mb-3">
                <span class="badge bg-success">Résolu</span>
                <small class="text-muted">Il y a 1 semaine</small>
              </div>
              <h5 class="fw-bold">Conteneur endommagé</h5>
              <p class="text-muted small mb-2">
                <i class="fa-solid fa-map-marker-alt me-1"></i>Rue Habib Thameur, Tunis
              </p>
              <p class="mb-3">Conteneur de recyclage cassé nécessitant un remplacement urgent.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <span class="badge bg-info me-1">Moyen</span>
                  <span class="badge bg-secondary">Infrastructure</span>
                </div>
                <button class="btn btn-outline-success btn-sm">
                  <i class="fa-solid fa-eye me-1"></i>Détails
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Report Card 3 -->
        <div class="col-md-6 mb-4">
          <div class="card welcome-card">
            <div class="card-body">
              <div class="d-flex justify-content-between mb-3">
                <span class="badge bg-success">Résolu</span>
                <small class="text-muted">Il y a 2 semaines</small>
              </div>
              <h5 class="fw-bold">Pollution de l'eau</h5>
              <p class="text-muted small mb-2">
                <i class="fa-solid fa-map-marker-alt me-1"></i>Lac de Tunis, zone nord
              </p>
              <p class="mb-3">Présence de nappes d'huile et déchets flottants dans le lac.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <span class="badge bg-danger me-1">Urgent</span>
                  <span class="badge bg-secondary">Eau</span>
                </div>
                <button class="btn btn-outline-success btn-sm">
                  <i class="fa-solid fa-eye me-1"></i>Détails
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Community Reports -->
        <div class="col-md-6 mb-4">
          <div class="card welcome-card">
            <div class="card-body">
              <div class="d-flex justify-content-between mb-3">
                <span class="badge bg-warning">En cours</span>
                <small class="text-muted">Il y a 3 heures</small>
              </div>
              <h5 class="fw-bold">Émissions de fumée industrielle</h5>
              <p class="text-muted small mb-2">
                <i class="fa-solid fa-map-marker-alt me-1"></i>Zone industrielle, Mégrine
              </p>
              <p class="mb-3">Fumée noire excessive provenant d'une usine locale.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <span class="badge bg-danger me-1">Urgent</span>
                  <span class="badge bg-secondary">Air</span>
                </div>
                <div class="text-muted small">
                  <i class="fa-solid fa-user me-1"></i>Par Ahmed K.
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-6 mb-4">
          <div class="card welcome-card">
            <div class="card-body">
              <div class="d-flex justify-content-between mb-3">
                <span class="badge bg-warning">En cours</span>
                <small class="text-muted">Il y a 1 jour</small>
              </div>
              <h5 class="fw-bold">Arbres à abattre</h5>
              <p class="text-muted small mb-2">
                <i class="fa-solid fa-map-marker-alt me-1"></i>Avenue Mohammed V
              </p>
              <p class="mb-3">Plusieurs arbres menacés d'abattage pour un projet immobilier.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <span class="badge bg-warning me-1">Important</span>
                  <span class="badge bg-secondary">Nature</span>
                </div>
                <div class="text-muted small">
                  <i class="fa-solid fa-user me-1"></i>Par Sarah M.
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-6 mb-4">
          <div class="card welcome-card">
            <div class="card-body">
              <div class="d-flex justify-content-between mb-3">
                <span class="badge bg-info">Nouveau</span>
                <small class="text-muted">Il y a 30 min</small>
              </div>
              <h5 class="fw-bold">Braconnage signalé</h5>
              <p class="text-muted small mb-2">
                <i class="fa-solid fa-map-marker-alt me-1"></i>Parc national Ichkeul
              </p>
              <p class="mb-3">Activité suspecte de braconnage d'oiseaux migrateurs.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <span class="badge bg-danger me-1">Urgent</span>
                  <span class="badge bg-secondary">Faune</span>
                </div>
                <div class="text-muted small">
                  <i class="fa-solid fa-user me-1"></i>Par Karim B.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}

